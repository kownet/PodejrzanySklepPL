@page
@model IndexModel

<h1 class="cover-heading">Wprowadź adres sklepu</h1>
<p class="lead">
    Nasz serwis szybko zweryfikuje czy sklep ten nie znajduje się na liście sklepów, na które warto uważać.
</p>
<p class="lead">
    <input type="url" class="form-control" id="store-to-check" placeholder="Adres sklepu"/>
</p>
<p class="lead">
    <a href="#" class="btn btn-lg btn-primary" id="btn-check">Sprawdź</a>
</p>

@section Scripts{

    <script type="text/javascript">

        APP.home.checkStore({
            btn: '#btn-check',
            cnt: '#store-to-check',
            url: 'https://api.podejrzanysklep.pl/ad/info'
        });

    </script>

}